---
import type { LegalFrontmatter } from '../types/legal';

interface Props {
  frontmatter: LegalFrontmatter;
}

const { frontmatter } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{frontmatter.title}</title>
  </head>
  <body>
    <div class="legal-container">
      <slot />
    </div>
  </body>
</html>

<style>
  .legal-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem;
    font-family:
      system-ui,
      -apple-system,
      sans-serif;
  }

  :global(h1) {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  :global(h2) {
    font-size: 1.5rem;
    margin: 2rem 0 1rem;
  }

  :global(p) {
    line-height: 1.6;
    color: #4a5568;
    margin-bottom: 1rem;
  }
</style>
