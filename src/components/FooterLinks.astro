---
const year = new Date().getFullYear();
---

<footer class="site-footer">
  <div class="footer-line"></div>

  <div class="footer-content">
    <a class="footer-brand" href="/" aria-label="Shimmr home">shimmr</a>

    <nav aria-label="Footer links">
      <a href="/support">Contact</a>
      <a href="/about">About</a>
      <a href="/legal/terms-of-service">Terms</a>
      <a href="/legal/privacy-policy">Privacy</a>
    </nav>

    <p>&copy; {year} Shimmr LLC</p>
  </div>
</footer>

<style>
  .site-footer {
    margin-bottom: 54px;
    font-family:
      'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Helvetica, Arial, sans-serif;
  }

  .footer-line {
    width: 100%;
    height: 1px;
    background: linear-gradient(90deg, rgba(255, 255, 255, 0.03), rgba(89, 102, 127, 0.66));
    opacity: 0.66;
  }

  .footer-content {
    min-height: 100px;
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    align-items: center;
    gap: 18px;
    padding-top: 46px;
  }

  .footer-brand {
    justify-self: start;
    color: #f0f4fb;
    font-size: 47px;
    line-height: 0.8;
    letter-spacing: -0.04em;
    font-weight: 600;
  }

  nav {
    display: inline-flex;
    gap: 30px;
  }

  nav a {
    color: #909aab;
    font-size: clamp(14px, 1.05vw, 16px);
    letter-spacing: -0.01em;
  }

  p {
    justify-self: end;
    margin: 0;
    color: #909aab;
    font-size: clamp(13px, 1.02vw, 16px);
    letter-spacing: -0.01em;
  }

  @media (max-width: 900px) {
    .footer-content {
      display: flex;
      flex-direction: column;
      padding-top: 52px;
      gap: 28px;
    }

    .footer-brand {
      font-size: 51px;
    }

    nav {
      flex-direction: column;
      align-items: center;
      gap: 20px;
    }

    nav a,
    p {
      font-size: 15px;
    }
  }
</style>
