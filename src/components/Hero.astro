---
import download from '../assets/download.svg';
---

<section class="hero-container">
  <div class="blur-layer"></div>
  <div class="hero-content">
    <a
      class="logo"
      href="https://apps.apple.com/us/app/shimmr-meditation-sleep/id6479964631?itscg=30200&itsct=apps_box_artwork&mttnsubad=6479964631"
      aria-label="Shimmr App"
    >
      <img
        src="https://is1-ssl.mzstatic.com/image/thumb/Purple221/v4/c6/02/f4/c602f423-680c-e10c-d402-ffa399002e04/AppIcon-0-1x_U007ephone-0-1-85-220-0.jpeg/540x540bb.jpg"
        alt="Shimmr: Meditation & Sleep"
      />
    </a>

    <div class="content">
      <h1>Discover Your Inner Calm</h1>
      <p>
        A beautifully crafted experience designed to enhance sleep, reduce stress, and elevate focus
        through immersive soundscapes.
      </p>

      <div class="download-options">
        <a
          href="https://apps.apple.com/us/app/shimmr-meditation-sleep/id6479964631?itscg=30200&itsct=apps_box_badge&mttnsubad=6479964631"
          aria-label="Download on the App Store"
        >
          <img
            src="https://toolbox.marketingtools.apple.com/api/v2/badges/download-on-the-app-store/black/en-us?releaseDate=1721865600"
            alt="Download on the App Store"
          />
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  .hero-container {
    font-family:
      -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
    display: flex;
    justify-content: center;
    align-items: center;
    background: linear-gradient(158deg, rgb(39 39 39), rgb(0 0 0));
    position: fixed;
    overflow: hidden;
    width: 100vw;
    height: 100vh;
  }

  .blur-layer {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.1);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    z-index: 0;
  }

  .hero-content {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    z-index: 1;
    margin: 0 auto;
    height: min-content;
    width: inherit;
  }

  .logo {
    margin-bottom: 2.5rem;
  }

  .logo img {
    width: 180px;
    height: 180px;
    border-radius: 36px;
    box-shadow: 0 15px 35px rgba(0, 0, 0, 0.25);
    transition:
      transform 0.3s ease,
      box-shadow 0.3s ease;
  }

  .logo img:hover {
    transform: scale(1.03);
    box-shadow: 0 18px 40px rgba(0, 0, 0, 0.3);
  }

  .content {
    max-width: 640px;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 1rem;
  }

  h1 {
    font-size: 3rem;
    font-weight: 500;
    color: #fff;
    margin: 0 0 1.5rem;
    letter-spacing: -0.02em;
    line-height: 1.1;
  }

  p {
    font-size: 1.4rem;
    color: rgba(255, 255, 255, 0.85);
    font-weight: 400;
    margin: 0 0 2.5rem;
    line-height: 1.5;
    max-width: 580px;
  }

  .download-options {
    margin-top: 0.5rem;
  }

  .download-options img {
    width: 200px;
    transition: transform 0.2s ease;
  }

  @media (max-width: 768px) {
    .logo img {
      width: 140px;
      height: 140px;
      border-radius: 28px;
    }

    h1 {
      font-size: 2.5rem;
      margin-bottom: 1rem;
    }

    p {
      font-size: 1.1rem;
      margin-bottom: 2rem;
    }

    .logo {
      margin-bottom: 1.5rem;
    }
  }

  @media (max-width: 480px) {
    .logo img {
      width: 120px;
      height: 120px;
      border-radius: 24px;
    }

    h1 {
      font-size: 2rem;
    }

    p {
      font-size: 1rem;
    }

    .download-options img {
      width: 180px;
    }
  }
</style>
