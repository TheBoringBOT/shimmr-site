---
export interface Props {
  appUrl?: string;
}

const {
  appUrl = 'https://apps.apple.com/us/app/binaural-beats-shimmr/id6479964631',
} = Astro.props;
---

<section class="hero">
  <header class="top-bar">
    <a class="brand" href="/" aria-label="Shimmr home">
      <span class="brand-mark" aria-hidden="true"></span>
      <span class="brand-wordmark">shimmr</span>
    </a>

    <a class="cta top-cta" href={appUrl}>Get the app</a>
  </header>

  <div class="hero-content">
    <h1>Audio wellness, redesigned.</h1>
    <a class="cta mobile-cta" href={appUrl}>Get the app</a>
  </div>
</section>

<style>
  .hero {
    margin-bottom: 0;
    padding-top: 0;
    font-family: 'Poppins', 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
  }

  .top-bar {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 16px;
    min-height: 7vh;
  }

  .brand {
    display: inline-flex;
    align-items: center;
    gap: 11px;
    font-size: 2.1vh;
    font-weight: 500;
    letter-spacing: -0.03em;
    color: #fff;
  }

  .brand-mark {
    position: relative;
    width: 24px;
    height: 24px;
    border-radius: 999px;
    background:
      conic-gradient(
        from 0deg,
        #fff 0deg 20deg,
        transparent 20deg 38deg,
        #fff 38deg 58deg,
        transparent 58deg 76deg,
        #fff 76deg 96deg,
        transparent 96deg 114deg,
        #fff 114deg 134deg,
        transparent 134deg 152deg,
        #fff 152deg 172deg,
        transparent 172deg 190deg,
        #fff 190deg 210deg,
        transparent 210deg 228deg,
        #fff 228deg 248deg,
        transparent 248deg 266deg,
        #fff 266deg 286deg,
        transparent 286deg 304deg,
        #fff 304deg 324deg,
        transparent 324deg 342deg,
        #fff 342deg 360deg
      );
    box-shadow: 0 0 28px rgba(255, 255, 255, 0.28);
  }

  .brand-mark::after {
    content: '';
    position: absolute;
    inset: 7px;
    border-radius: 999px;
    background: #02050d;
  }

  .hero-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    padding-top: 3vh;
  }

  h1 {
    margin: 0;
    max-width: 80%;
    font-size: clamp(56px, 12vw, 130px);
    line-height: 105%;
    letter-spacing: -0.03em;
    font-weight: 400;
    background: linear-gradient(180deg, #feffff 0%, #e6e9ef 46%, #f7f9fb 100%);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .cta {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    min-height: clamp(38px, 4.4vh, 48px);
    padding: 0 clamp(14px, 1.8vh, 22px);
    border-radius: 999px;
    border: none;
    font-size: clamp(15px, 1.8vh, 20px);
    letter-spacing: -0.01em;
    font-weight: 500;
    color: #060a13;
    background: linear-gradient(180deg, #feffff 0%, #e6e9ef 46%, #f7f9fb 100%);
    transition: filter 0.2s ease;
    outline: none;
    box-shadow: none;
  }

  .cta:hover {
    filter: brightness(1.07);
  }

  .cta:focus-visible {
    outline: none;
  }

  .mobile-cta {
    display: none;
    margin-top: 3vh;
  }

  @media (max-width: 1000px) {
    .hero {
      margin-bottom: 0;
      padding-top: 0;
    }

    .top-bar {
      justify-content: center;
    }

    .brand {
      gap: 9px;
      font-size: 16px;
    }

    .brand-mark {
      width: 18px;
      height: 18px;
    }

    .brand-mark::after {
      inset: 5px;
    }

    h1 {
      max-width: 100%;
      margin-top: 0;
      font-size: clamp(40px, 11vw, 58px);
      line-height: 105%;
    }

    .top-cta {
      display: none;
    }

    .mobile-cta {
      display: inline-flex;
    }
  }
</style>
