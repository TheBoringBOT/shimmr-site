---
export interface Props {
  appUrl?: string;
}

const {
  appUrl = 'https://apps.apple.com/us/app/binaural-beats-shimmr/id6479964631',
} = Astro.props;
---

<section class="footer-cta">
  <h2>Peak audio wellness.</h2>
  <p>
    Sleep deeper, focus longer, and reset faster with high-fidelity binaural audio. Build custom
    sessions and keep your progress synced with iCloud.
  </p>
  <a class="cta" href={appUrl}>Get the app</a>
</section>

<style>
  .footer-cta {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    margin-bottom: 180px;
    font-family:
      'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Helvetica, Arial, sans-serif;
  }

  h2 {
    margin: 0;
    max-width: 850px;
    font-size: clamp(56px, 12vw, 130px);
    line-height: 105%;
    letter-spacing: -0.03em;
    font-weight: 400;
    background: linear-gradient(180deg, #fbfdff 0%, #dbe1ea 44%, #f7f8fb 100%);
    -webkit-text-fill-color: transparent;
    background-clip: text;
    -webkit-background-clip: text;
  }

  p {
    margin: 22px auto 30px;
    max-width: 700px;
    color: #a4adbc;
    font-size: clamp(16px, 1.55vw, 23px);
    line-height: 1.38;
    letter-spacing: -0.015em;
    text-wrap: balance;
  }

  .cta {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    min-height: clamp(38px, 4.4vh, 48px);
    padding: 0 clamp(14px, 1.8vh, 22px);
    border-radius: 999px;
    border: none;
    background: linear-gradient(180deg, #feffff 0%, #e6e9ef 46%, #f7f9fb 100%);
    color: #060a13;
    font-size: clamp(15px, 1.8vh, 20px);
    line-height: 1;
    letter-spacing: -0.01em;
    font-weight: 500;
    transition: filter 0.2s ease;
    outline: none;
    box-shadow: none;
  }

  .cta:hover {
    filter: brightness(1.07);
  }

  @media (max-width: 900px) {
    .footer-cta {
      margin-bottom: 132px;
    }

    h2 {
      max-width: 330px;
      line-height: 105%;
      font-size: clamp(40px, 11vw, 58px);
    }

    p {
      max-width: 292px;
      margin-top: 16px;
      margin-bottom: 24px;
      font-size: clamp(12px, 3.8vw, 15px);
      line-height: 1.46;
    }

  }
</style>
