---
import Layout from './Layout.astro';
import type { LegalFrontmatter } from '../types/legal';

interface Props {
  frontmatter: LegalFrontmatter;
}

const { frontmatter } = Astro.props;
---

<Layout
  title={frontmatter.title}
  description={frontmatter.description || `Legal document: ${frontmatter.title}`}
>
  <div class="legal-container">
    <slot />
  </div>
</Layout>

<style>
  /* Override global background color */
  :global(html),
  :global(body) {
    background-color: #ffffff !important;
  }

  .legal-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 40px 16px;
    color: #1d1d1f;
    background-color: #ffffff !important;
    font-family:
      system-ui,
      -apple-system,
      sans-serif;
  }

  :global(a) {
    color: blue !important;
  }
  :global(h1) {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  :global(h2) {
    font-size: 1.5rem;
    margin: 2rem 0 1rem;
  }

  :global(p) {
    line-height: 1.6;
    margin-bottom: 1rem;
  }
</style>
